    "pocket-build-tools": "git+https://git@github.com/Pocket/front-end-build-tools.git#add/circleCI",
    "prettier": "^1.18.2",
    "redux-devtools-extension": "^2.13.2",
    "remote-redux-devtools": "^0.5.12",
    "remotedev-server": "^0.3.1"
  },
  "dependencies": {
    "autosize-input": "^0.4.0",
    "blueimp-md5": "^2.10.0",
    "classnames": "^2.2.5",
    "downshift": "^1.30.2",
    "emotion": "^10.0.14",
    "jquery": "^3.4.1",
    "js-base64": "^2.4.3",
    "match-sorter": "^2.2.1",
    "prop-types": "^15.5.10",
    "react": "^16.9.0",
    "react-chrome-redux": "1.4.0",
    "react-dom": "^16.9.0",
    "react-input-autosize": "^2.2.1",
    "react-motion": "^0.5.2",
    "react-onclickoutside": "^6.6.0",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2",
    "redux-saga": "^0.15.6",
    "semver": "^5.4.1"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "color-named": "never",
      "indentation": [
        2,
        {
          "ignore": [
            "value"
          ]
        }
      ],
      "max-nesting-depth": 3,
      "number-max-precision": 4,
      "property-no-vendor-prefix": true,
      "at-rule-no-vendor-prefix": true,
      "at-rule-no-unknown": null,
      "media-feature-name-no-vendor-prefix": true,
      "selector-no-vendor-prefix": true,
      "value-no-vendor-prefix": true,
      "order/properties-alphabetical-order": true
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:fix",
      "git add"
    ],
    "*.{scss,sass,css,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "lint": "npx eslint -f table",
    "lint:fix": "npx eslint --fix",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "remotedev": "remotedev --hostname=localhost --port=8000",
    "start": "build-pocket save-to-pocket start",
    "build": "build-pocket save-to-pocket build",
    "publish-build:pr": "build-pocket save-to-pocket publish --pull-request",
    "publish-build": "build-pocket save-to-pocket publish",
    "test": "BABEL_ENV=test NODE_ENV=test npx jest --config=./config/jest/jest.config.js",
    "test:watch": "BABEL_ENV=test NODE_ENV=test npx jest --config=./config/jest/jest.config.js --watch",
    "test:puppeteer": "echo \" Puppeteer testing will be incorporated in the near future \"",
    "storybook": "yarn start-storybook -p 6010",
    "build-storybook": "build-storybook"
  }
}
